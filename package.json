{
  "name": "logistics-reconciliation-tool",
  "version": "1.0.0",
  "description": "A tool to reconcile Sales Order and Purchase Order files",
  "main": "server/index.js",
  "scripts": {
    "dev": "concurrently \"npm run server\" \"npm run client\"",
    "server": "nodemon server/index.js",
    "client": "cd client && npm start",
    "build": "cd client && npm run build",
    "install-all": "npm install && cd client && npm install"
  },
  "dependencies": {
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "form-data": "^4.0.4",
    "multer": "^1.4.5-lts.1",
    "xlsx": "^0.18.5"
  },
  "devDependencies": {
    "concurrently": "^8.2.2",
    "nodemon": "^3.0.1"
  },
  "keywords": [
    "reconciliation",
    "excel",
    "logistics",
    "sales-order",
    "purchase-order"
  ],
  "author": "Your Name",
  "license": "MIT"
}
